{
  "version": "0.2.1",
  "tasks": [
    {
      "taskName": "Build",
      "appliesTo": "Makefile",
      "contextType": "build",
      "type": "default",
      "command": "${env.COMSPEC}",
      "args": [
        "bash -l -c 'make -s -j 10 all'"
      ]
    },
    {
      "taskName": "Clean",
      "appliesTo": "Makefile",
      "contextType": "clean",
      "type": "default",
      "command": "${env.COMSPEC}",
      "args": [
        "bash -l -c 'make -s clean'"
      ]
    },
